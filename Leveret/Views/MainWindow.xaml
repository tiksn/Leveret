<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TIKSN.Leveret.ViewModels;assembly=Leveret"
        Icon="resm:TIKSN.Leveret.Assets.avalonia-logo.ico"
        Title="Leveret">

  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="17*" />
      <ColumnDefinition Width="3*" />
    </Grid.ColumnDefinitions>

    <TextBox TextWrapping="NoWrap" AcceptsReturn="True" FontSize="48" FontFamily="Consolas" Text="{Binding InputSourceCode}" />

    <TextBlock Grid.Column="1" Text="{Binding InputSourceCode}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

  </Grid>
</Window>