<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TIKSN.Leveret.ViewModels;assembly=Leveret"
        Icon="resm:TIKSN.Leveret.Assets.avalonia-logo.ico"
        Title="Leveret">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="17*" />
      <ColumnDefinition Width="3*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <TextBox TextWrapping="NoWrap" AcceptsReturn="True" FontSize="48" FontFamily="Consolas" Text="{Binding InputSourceCode}" />

    <ListBox Grid.Column="1" Items="{Binding ExecutionResults.GlobalVariables, Mode=OneWay}" FontSize="48" FontFamily="Consolas">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Name}" />
            <TextBlock Text=" = " />
            <TextBlock Text="{Binding Value}" />
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <TextBlock Grid.ColumnSpan="2" Grid.Row="1" Text="{Binding ExecutionResults.Message}" Foreground="Red" Background="Yellow" />
  </Grid>
</Window>